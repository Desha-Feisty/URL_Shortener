<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
            crossorigin="anonymous"
        />
        <title>URL Shortener</title>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="#">URL Shortener</a>
            </div>
        </nav>

        <div class="container my-4">
            <% if (created && createdShort) { %>
            <div
                class="alert alert-success alert-dismissible fade show"
                role="alert"
            >
                Short URL created:
                <a
                    class="alert-link"
                    href="<%= baseUrl %>/<%= createdShort %>"
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    <%= baseUrl %>/<%= createdShort %>
                </a>
                <button
                    type="button"
                    class="btn btn-sm btn-success ms-2 copy-btn"
                    data-url="<%= baseUrl %>/<%= createdShort %>"
                >
                    Copy
                </button>
                <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="alert"
                    aria-label="Close"
                ></button>
            </div>
            <% } %>

            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Shorten a URL</h5>
                            <form
                                action="/shortUrls"
                                method="POST"
                                class="mt-3"
                            >
                                <div class="input-group">
                                    <input
                                        class="form-control"
                                        placeholder="Enter a long URL to shorten"
                                        type="url"
                                        name="fullUrl"
                                        id="fullUrl"
                                        required
                                    />
                                    <button
                                        class="btn btn-primary"
                                        type="submit"
                                    >
                                        Shorten
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-12">
                    <div class="d-flex align-items-center mb-2">
                        <h6 class="mb-0">Your Shortened URLs</h6>
                        <span class="badge bg-secondary ms-2"
                            ><%= shortUrls.length %></span
                        >
                    </div>
                    <div class="table-responsive">
                        <table
                            class="table table-striped table-hover align-middle"
                        >
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Full URL</th>
                                    <th scope="col">Short URL</th>
                                    <th scope="col">Clicks</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% shortUrls.forEach(function(shortUrl) { %>
                                <tr>
                                    <td>
                                        <a
                                            href="<%= shortUrl.full %>"
                                            target="_blank"
                                            rel="noopener noreferrer"
                                            ><%= shortUrl.full %></a
                                        >
                                    </td>
                                    <td>
                                        <a
                                            href="<%= baseUrl %>/<%= shortUrl.short %>"
                                            target="_blank"
                                            rel="noopener noreferrer"
                                            ><%= baseUrl %>/<%= shortUrl.short
                                            %></a
                                        >
                                        <button
                                            type="button"
                                            class="btn btn-sm btn-outline-secondary ms-2 copy-btn"
                                            data-url="<%= baseUrl %>/<%= shortUrl.short %>"
                                        >
                                            Copy
                                        </button>
                                    </td>
                                    <td>
                                        <span class="badge bg-info"
                                            ><%= shortUrl.clicks %></span
                                        >
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-RQmWn5cQKQAVHqS6b8R3W4WmZ5fTiK1v7m4Q2d7bHjJwE2q9uXkzP7J2OQ8I3u1x"
            crossorigin="anonymous"
        ></script>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                document.querySelectorAll(".copy-btn").forEach(function (btn) {
                    btn.addEventListener("click", async function () {
                        const url = this.getAttribute("data-url");
                        try {
                            await navigator.clipboard.writeText(url);
                            this.textContent = "Copied";
                            this.classList.remove("btn-outline-secondary");
                            this.classList.add("btn-success");
                            setTimeout(() => {
                                this.textContent = "Copy";
                                this.classList.remove("btn-success");
                                this.classList.add("btn-outline-secondary");
                            }, 2000);
                        } catch (e) {
                            alert("Copy failed. Please copy manually: " + url);
                        }
                    });
                });
            });
        </script>
    </body>
</html>
